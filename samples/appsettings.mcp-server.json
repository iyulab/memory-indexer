{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Configuration for Memory Indexer as standalone MCP server (stdio)",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "MemoryIndexer": "Debug"
    }
  },

  "MemoryIndexer": {
    "Storage": {
      "Type": "SqliteVec",
      "Sqlite": {
        "DatabasePath": "~/.memory-indexer/memories.db",
        "UseWalMode": true,
        "FtsTokenizer": "trigram",
        "CacheSizeKb": 2000,
        "EnableVectorSearch": true,
        "EnableFullTextSearch": true,
        "BusyTimeoutMs": 5000
      }
    },
    "Embedding": {
      "Provider": "Local",
      "Model": "all-MiniLM-L6-v2",
      "Dimensions": 384,
      "BatchSize": 32,
      "CacheTtlMinutes": 60
    },
    "Scoring": {
      "RecencyWeight": 1.0,
      "ImportanceWeight": 1.0,
      "RelevanceWeight": 1.0,
      "DecayFactor": 0.99
    },
    "Search": {
      "DefaultLimit": 10,
      "MaxLimit": 100,
      "DenseWeight": 0.6,
      "SparseWeight": 0.4,
      "RrfK": 60
    }
  }
}
