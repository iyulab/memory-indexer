{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Configuration for Memory Indexer with Qdrant backend (production/high-scale)",

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "MemoryIndexer": "Information"
    }
  },

  "MemoryIndexer": {
    "Storage": {
      "Type": "Qdrant",
      "CollectionName": "memories",
      "HnswM": 16,
      "HnswEfConstruction": 200,
      "HnswEfSearch": 128,
      "Qdrant": {
        "Host": "qdrant.example.com",
        "Port": 6334,
        "ApiKey": "${QDRANT_API_KEY}",
        "CollectionName": "memories"
      }
    },
    "Embedding": {
      "Provider": "Ollama",
      "Model": "nomic-embed-text",
      "Dimensions": 768,
      "Endpoint": "http://ollama.example.com:11434",
      "BatchSize": 64,
      "CacheTtlMinutes": 120,
      "TimeoutSeconds": 60
    },
    "Scoring": {
      "RecencyWeight": 1.0,
      "ImportanceWeight": 1.2,
      "RelevanceWeight": 1.5,
      "DecayFactor": 0.995,
      "MaxExpectedAccessCount": 500
    },
    "Search": {
      "DefaultLimit": 10,
      "MaxLimit": 100,
      "MinScore": 0.3,
      "DenseWeight": 0.6,
      "SparseWeight": 0.4,
      "MmrLambda": 0.7,
      "DuplicateThreshold": 0.85,
      "RrfK": 60
    }
  }
}
