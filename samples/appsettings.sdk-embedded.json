{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Configuration for Memory Indexer SDK embedded in host application",

  "MemoryIndexer": {
    "Storage": {
      "Type": "SqliteVec",
      "Sqlite": {
        "DatabasePath": "data/memories.db",
        "UseWalMode": true,
        "FtsTokenizer": "trigram",
        "CacheSizeKb": 4000,
        "EnableVectorSearch": true,
        "EnableFullTextSearch": true,
        "BusyTimeoutMs": 10000
      }
    },
    "Embedding": {
      "Provider": "Local",
      "Model": "all-MiniLM-L6-v2",
      "Dimensions": 384,
      "BatchSize": 64,
      "CacheTtlMinutes": 120
    },
    "Scoring": {
      "RecencyWeight": 1.0,
      "ImportanceWeight": 1.2,
      "RelevanceWeight": 1.5,
      "DecayFactor": 0.995
    },
    "Search": {
      "DefaultLimit": 10,
      "MaxLimit": 50,
      "DenseWeight": 0.7,
      "SparseWeight": 0.3,
      "MmrLambda": 0.6
    }
  }
}
